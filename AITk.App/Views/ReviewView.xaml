<UserControl x:Class="AITk.App.Views.ReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Smart Review" 
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Generate AI-ready code review packets from Git changes"
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
        </StackPanel>

        <!-- Controls Row -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Working Directory:" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                <TextBox Grid.Column="1"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding WorkingDirectory, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Consolas" FontSize="13"/>

                <Button Grid.Column="2" Content="ðŸ“‚ Browse"
                        Command="{Binding BrowseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="12,0,0,0"/>

                <Button Grid.Column="3" Content="ðŸ”„ Scan"
                        Command="{Binding ScanCommand}"
                        Style="{StaticResource PremiumButtonStyle}"
                        Margin="8,0,0,0"/>

                <Button Grid.Column="4" Content="ðŸ“‹ Generate"
                        Command="{Binding GenerateCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="8,0,0,0"/>
            </Grid>
        </Border>

        <!-- Changed Files List + Preview -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- File List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Changed Files" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="{Binding ChangedFiles.Count, StringFormat=' ({0})'}"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding ChangedFiles}"
                             SelectedItem="{Binding SelectedFile}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Status}" 
                                               Foreground="{StaticResource AccentBrush}"
                                               Width="60" FontSize="11"/>
                                    <TextBlock Text="{Binding Path}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontFamily="Consolas" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Diff Preview -->
            <Border Grid.Column="1" Background="#0D1117" CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding DiffPreview}"
                               FontFamily="Consolas" FontSize="12"
                               Foreground="#C9D1D9" Padding="16"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}"
                CornerRadius="8" Padding="16,10" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}"
                             Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Status}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding Branch, StringFormat='Branch: {0}'}"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
