<UserControl x:Class="AITk.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Welcome to your AI-powered development toolkit"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="14"
                       Margin="0,0,0,32"/>

            <!-- Quick Action Cards -->
            <TextBlock Text="Quick Actions"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,16"/>

            <WrapPanel>
                <!-- Task Runner Card -->
                <Border Style="{StaticResource CardStyle}" 
                        Width="280" Margin="0,0,16,16">
                    <StackPanel>
                        <TextBlock Text="ðŸƒ" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock Text="Task Runner" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Execute commands with auto-retry loop. Perfect for running tests until they pass."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,16"/>
                        <Button Content="Launch Runner â†’" 
                                Style="{StaticResource PremiumButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Smart Review Card -->
                <Border Style="{StaticResource CardStyle}" 
                        Width="280" Margin="0,0,16,16">
                    <StackPanel>
                        <TextBlock Text="ðŸ”" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock Text="Smart Review" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Generate AI-ready code review packets from your Git changes."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,16"/>
                        <Button Content="Start Review â†’" 
                                Style="{StaticResource PremiumButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Code Polisher Card -->
                <Border Style="{StaticResource CardStyle}" 
                        Width="280" Margin="0,0,16,16">
                    <StackPanel>
                        <TextBlock Text="âœ¨" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock Text="Code Polisher" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Prepare code simplification prompts for cleaner, more maintainable code."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,16"/>
                        <Button Content="Polish Code â†’" 
                                Style="{StaticResource PremiumButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Status Section -->
            <TextBlock Text="System Status"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,24,0,16"/>

            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Git Status -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Git" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="8" Height="8" 
                                     Fill="{StaticResource SuccessBrush}"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="Available" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- .NET Status -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text=".NET Runtime" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="8" Height="8" 
                                     Fill="{StaticResource SuccessBrush}"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="8.0" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Mode -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Operating Mode" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="8" Height="8" 
                                     Fill="{StaticResource AccentBrush}"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="Tool Mode (No API)" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
