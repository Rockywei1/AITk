<UserControl x:Class="AITk.App.Views.PolisherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Code Polisher" 
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Generate simplification prompts for AI-powered code cleanup"
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
        </StackPanel>

        <!-- Controls Row -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Target File/Folder:" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                <TextBox Grid.Column="1"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Consolas" FontSize="13"/>

                <Button Grid.Column="2" Content="ðŸ“‚ Browse"
                        Command="{Binding BrowseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="12,0,0,0"/>

                <Button Grid.Column="3" Content="âœ¨ Generate"
                        Command="{Binding GenerateCommand}"
                        Style="{StaticResource PremiumButtonStyle}"
                        Margin="8,0,0,0"/>
            </Grid>
        </Border>

        <!-- Options + Preview -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Options Panel -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Simplification Goals" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <CheckBox Content="Remove dead code" IsChecked="{Binding RemoveDeadCode}"
                              Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <CheckBox Content="Simplify conditionals" IsChecked="{Binding SimplifyConditionals}"
                              Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <CheckBox Content="Extract methods" IsChecked="{Binding ExtractMethods}"
                              Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <CheckBox Content="Improve naming" IsChecked="{Binding ImproveNaming}"
                              Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <CheckBox Content="Add comments" IsChecked="{Binding AddComments}"
                              Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"/>

                    <Separator Background="{StaticResource BorderBrush}" Margin="0,0,0,16"/>

                    <TextBlock Text="Max Lines per File:" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}"
                             Text="{Binding MaxLinesPerFile}" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Prompt Preview -->
            <Border Grid.Column="1" Background="#0D1117" CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding PromptPreview}"
                               FontFamily="Consolas" FontSize="12"
                               Foreground="#C9D1D9" Padding="16" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}"
                CornerRadius="8" Padding="16,10" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}"
                             Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Status}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="ðŸ“‹ Copy Prompt"
                        Command="{Binding CopyCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
